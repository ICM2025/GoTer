    <path d="M16 40 L12 32 L20 32 Z" fill="#FF4444" stroke="#CC0000" stroke-width="1"/>

    <!-- Background circle -->
    <circle cx="16" cy="16" r="15" fill="#FF4444" stroke="#CC0000" stroke-width="2"/>

    <!-- Bicycle icon -->
    <g transform="translate(16, 16) scale(0.8)" fill="#FFFFFF" stroke="#FFFFFF" stroke-width="0.5">
        <!-- Left wheel -->
        <circle cx="-6" cy="3" r="4" fill="none" stroke="#FFFFFF" stroke-width="1.5"/>
        <circle cx="-6" cy="3" r="1" fill="#FFFFFF"/>

        <!-- Right wheel -->
        <circle cx="6" cy="3" r="4" fill="none" stroke="#FFFFFF" stroke-width="1.5"/>
        <circle cx="6" cy="3" r="1" fill="#FFFFFF"/>

        <!-- Frame -->
        <path d="M-6 3 L-2 -3 L2 -3 L6 3" fill="none" stroke="#FFFFFF" stroke-width="1.5" stroke-linecap="round"/>
