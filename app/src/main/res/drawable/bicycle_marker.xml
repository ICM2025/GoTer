        <path d="M2 -3 L-6 3" fill="none" stroke="#FFFFFF" stroke-width="1.5" stroke-linecap="round"/>

        <!-- Seat -->
        <path d="M-3 -3 L1 -3" fill="none" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round"/>

        <!-- Handlebars -->
        <path d="M1 -4 L3 -4" fill="none" stroke="#FFFFFF" stroke-width="1.5" stroke-linecap="round"/>
        <path d="M2 -3 L2 -4" fill="none" stroke="#FFFFFF" stroke-width="1.5" stroke-linecap="round"/>

        <!-- Pedals -->
        <circle cx="-2" cy="1" r="0.8" fill="#FFFFFF"/>
    </g>
</svg>