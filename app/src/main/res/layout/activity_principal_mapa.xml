<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal_Mapa">

    <!-- Fragmento del Mapa -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- BotÃ³n de regreso -->
    <ImageView
        android:id="@+id/botonBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/back_button"
        android:contentDescription="BotÃ³n de regreso" />

    <!-- Contenedor principal inferior (AUMENTADO) -->
    <RelativeLayout
        android:id="@+id/contenedorInferior"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:padding="20dp">

        <!-- Tarjeta superior: Saludo y tiempo -->
        <RelativeLayout
            android:id="@+id/cardSaludo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/textSaludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, usuario"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textTiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš²  0.9 Km â€¢ 6 Min"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Tarjeta inferior: UbicaciÃ³n y botÃ³n "GO!" -->
        <RelativeLayout
            android:id="@+id/cardUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_below="@id/cardSaludo">

            <!-- TÃ­tulo "Parqueadero mÃ¡s cercano a..." -->
            <TextView
                android:id="@+id/textParqueadero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parqueadero mÃ¡s cercano a..."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="6dp"/>

            <!-- Campo de ubicaciÃ³n editable -->
            <EditText
                android:id="@+id/editUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Facultad de ciencias bÃ¡sicas"
                android:textColorHint="#656CC3"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@null"
                android:layout_below="@id/textParqueadero"
                android:layout_alignParentStart="true"/>

            <!-- Icono de ediciÃ³n (AJUSTADO) -->

            <!-- BotÃ³n "GO!" mÃ¡s grande -->

            <ImageView
                android:id="@+id/iconoEditar"
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@id/editUbicacion"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="32dp"
                android:layout_toStartOf="@id/botonGo"
                android:contentDescription="Editar ubicaciÃ³n"
                android:src="@drawable/pen" />

            <Button
                android:id="@+id/botonGo"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="GO!"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="@font/bahiana"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/blue_buttons"
                android:padding="12dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
